// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": ["$ts-checker-webpack-watch", "$ts-checker-eslint-webpack-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "clear": true,
        "close": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch-release",
      "problemMatcher": ["$ts-checker-webpack-watch", "$ts-checker-eslint-webpack-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "clear": true,
        "close": true
      },
      "group": "build"
    },
    {
      "type": "npm",
      "script": "lint",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
